<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="?attr/backgroundColor">

    <TextView
        android:id="@+id/arabicResultText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="24sp"
        android:gravity="end"
        android:padding="8dp"
        android:text="0"
        android:textColor="?attr/textColor"
        android:alpha="0.7"/>

    <TextView
        android:id="@+id/resultText"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:textSize="48sp"
        android:gravity="end|center_vertical"
        android:padding="16dp"
        android:text="አልቦ"
        android:textColor="?attr/textColor"
        android:background="?attr/displayBackgroundColor"
        android:layout_marginBottom="16dp"
        android:elevation="4dp"/>

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="7"
        android:columnCount="4"
        android:rowCount="5"
        android:useDefaultMargins="true">

        <!-- Number buttons with Ethiopian style -->
        <Button android:id="@+id/btn7"
            android:text="7/፯"
            style="@style/EthiopianButtonStyle"/>
        <Button android:id="@+id/btn8"
            android:text="8/፰"
            style="@style/EthiopianButtonStyle"/>
        <Button android:id="@+id/btn9"
            android:text="9/፱"
            style="@style/EthiopianButtonStyle"/>
        <Button android:id="@+id/btnDivide"
            android:text="÷"
            style="@style/EthiopianOperatorButtonStyle"/>

        <Button android:id="@+id/btn4"
            android:text="4/፬"
            style="@style/EthiopianButtonStyle"/>
        <Button android:id="@+id/btn5"
            android:text="5/፭"
            style="@style/EthiopianButtonStyle"/>
        <Button android:id="@+id/btn6"
            android:text="6/፮"
            style="@style/EthiopianButtonStyle"/>
        <Button android:id="@+id/btnMultiply"
            android:text="×"
            style="@style/EthiopianOperatorButtonStyle"/>

        <Button android:id="@+id/btn1"
            android:text="1/፩"
            style="@style/EthiopianButtonStyle"/>
        <Button android:id="@+id/btn2"
            android:text="2/፪"
            style="@style/EthiopianButtonStyle"/>
        <Button android:id="@+id/btn3"
            android:text="3/፫"
            style="@style/EthiopianButtonStyle"/>
        <Button android:id="@+id/btnMinus"
            android:text="-"
            style="@style/EthiopianOperatorButtonStyle"/>

        <Button android:id="@+id/btn0"
            android:text="0/አልቦ"
            style="@style/EthiopianButtonStyle"/>
        <Button android:id="@+id/btnClear"
            android:text="አጥፋ"
            style="@style/EthiopianClearButtonStyle"/>
        <Button android:id="@+id/btnEquals"
            android:text="="
            style="@style/EthiopianEqualsButtonStyle"/>
        <Button android:id="@+id/btnPlus"
            android:text="+"
            style="@style/EthiopianOperatorButtonStyle"/>

    </GridLayout>

</LinearLayout>